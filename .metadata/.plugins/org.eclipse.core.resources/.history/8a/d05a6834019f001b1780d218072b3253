#ifndef UTN_LIB_H_
#define UTN_LIB_H_

#include <stdio.h>
#include <stdio_ext.h>
#include <stdlib.h>

/** \brief Permite el ingreso de un dato de tipo flotante.
 *
 *	\param pNumero puntero del dato de tipo float a ingresar.
 *	\param pTexto puntero del mensaje que se muestra a la hora de pedir al usuario que ingrese un valor.
 *	\param return retorno = 0 en caso de haber validado todo bien, retorno = -1 en caso de error.
 *
 */
float utn_getFloat(float* pNumero, char* pTexto);
int utn_getInt(int* pNum, char* pTexto, char* pError, int minimo, int maximo);
int utn_menu(int* pVariableOpcion, float numA, float numB, int changeA, int changeB, int minimo, int maximo);



#endif /* UTN_LIB_H_ */
