#include "utn_lib.h"

float utn_getFloat(float* pNum, char* pTexto)
{
	printf("%s",pTexto);
	__fpurge(stdin);
	scanf("%f",pNum);

	//cls

	return *pNum;
}

int utn_getInt(int* pNum, char* pTexto, char* pError, int minimo, int maximo, int reintentos)
{
	int retorno;
	retorno = -1;

	do
	{

		printf("%s",pTexto);
		__fpurge(stdin);
		scanf("%d",pNum);

		if(*pNum>=minimo && *pNum<=maximo)
		{
			retorno = 0;
			break;
		}
		else
		{
			printf("%s",pError);
			reintentos--;
		}

	}while(reintentos!=0);

	return retorno;
}

int utn_menu(int* pVariableOpcion, float* pNumA, float pNumB, int changeA, int changeB, int minimo, int maximo, int reintentos)
{

	printf("\n\t\t---CALCULADORA---");

	    if(changeA != 1)
	    {
	        printf("\n\t1)Ingresar 1er operando (A=x).");
	    }
	    else
	    {
	        printf("\n\t1)Ingresar 1er operando (A=%.2f).", pNumA);
	    }

	    if(changeB != 1)
	    {
	        printf("\n\t2)Ingresar 2do operando (B=y).");
	    }
	    else
	    {
	        printf("\n\t2)Ingresar 2do operando (B=%.2f).", pNumB);
	    }

	    printf("\n\t3)Calcular todas las operaciones.");
	    printf("\n\t4)Informar resultados.");
	    printf("\n\t5)Salir.");

	    utn_getInt(pVariableOpcion, "\nSeleccione una opcion (3 intentos en caso de error): ","\nOpcion invalida, intente de nuevo: ",minimo,maximo,reintentos);

	    return *pVariableOpcion;
}
