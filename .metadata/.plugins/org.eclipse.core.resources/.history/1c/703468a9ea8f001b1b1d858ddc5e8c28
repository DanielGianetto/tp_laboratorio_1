#include "utn_lib.h"

float utn_getFloat(float* pNumero, char* pTexto, char* pError)
{
	printf("%s",pTexto);
	__fpurge(stdin);

	return 0;
}

int utn_getInt(int* pNum, char* pTexto, char* pError, int minimo, int maximo, int reintentos)
{
	int retorno;
	retorno = -1;

	do
	{

		printf("%s",pTexto);
		__fpurge(stdin);
		scanf("%d",pNum);

		if(*pNum>=min && *pNum<=max)
		{
			retorno = 0;
			break;
		}
		else
		{
			printf("%s",pError);
			reintentos--;
		}

	}while(reintentos!=0);

	return retorno;
}
